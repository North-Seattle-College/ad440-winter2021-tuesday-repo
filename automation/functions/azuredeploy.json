{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
       "storageAccountPrefix": {
           "type": "string",
           "defaultValue": "selinapn",
           "maxLength": 11,
           "minLength": 3,
           "metadata": {
               "description": "Prefix for storage account name"
           }
       },
       "accountType": {
           "type": "string",
           "defaultValue": "Standard_LRS",
           "allowedValues": [
               "Standard_LRS",
               "Premium_LRS",
               "Standard_RAGRS"
           ],
           "metadata": {
               "description": "SKU for storage account"
           }
       },
       "applicationName": {
           "type": "string",
           "defaultValue": "spnwebapp",
           "maxLength": 12,
           "minLength": 3,
           "metadata": {
               "description": "Name of your application"
           }
       },
       "appServicePlan": {
           "type": "string",
           "metadata": {
               "description": "description"
           }
       },
       "skuTier": {
           "type": "string",
           "defaultValue": "Dynamic",
           "metadata": {
               "description": "SKU for host service"
           }
       },
       "skuName": {
           "type": "string",
           "defaultValue":"Y1",
           "metadata": {
               "description": "Name of hosting plan"
           }
       }
    },
    "variables": {
        "hostPlanName": "[toLower(concat('plan-', parameters('applicationName')))]",
        "storageAccountName": "[toLower(concat('stor-', uniqueString( resourceGroup().id )))]"
    },
    "resources": [
        {
            "name": "[parameters('storageAccountPrefix')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-06-01",
            "tags": {
                "displayName": "[variables('storageAccountName')]"
            },
            "location": "[resourceGroup().location]",
            "kind": "[parameters('accountType')]",
            "sku": {
                "name": "[parameters('accountType')]",
                "tier": "[parameters('accountType')]"
            },
            "properties": {
                "accountType": "[parameters('accountType')]"
            }
        },
        {
            "name": "[parameters('applicationName')]",
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-11-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "name": "[parameters('applicationName')]"
            }
        },
        {
            "name": "[variables('hostPlanName')]",
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2018-02-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "Tier": "[parameters('skuTier')]",
                "Name": "[parameters('skuName')]"
            },
            "tags": {
                "displayName": "[parameters('appServicePlan')]"
            },
            "properties": {
                "name": "[parameters('appServicePlan')]"
            }
        }
    ]
}
