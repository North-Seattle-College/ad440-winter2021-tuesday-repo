{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
       "storageAccountType": {
           "type": "string",
           "defaultValue": "Standard_LRS",
           "allowedValues": [
           "Standard_LRS",
            "Standard_GRS"
            ],
           "metadata": {
               "description": "Storage type"
           }
       },
       "applicationName": {
           "type": "string",
           "defaultValue": "spnwebapp",
           "maxLength": 12,
           "minLength": 3,
           "metadata": {
               "description": "Name of your application"
           }
       },
       "appServicePlan": {
           "type": "string",
           "metadata": {
               "description": "description"
           }
       }
    },
    "variables": {
        "hostPlanName": "[toLower(concat('plan-', parameters('applicationName')))]",
        "storageAccountName": "[toLower(concat('stor-', uniqueString(resourceGroup().id)))]"
    },
    "resources": [
        {
            "name": "[variables('storageAccountName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-06-01",
            "location": "[resourceGroup().location]",
            "kind": "StorageV2",
            "sku": {
                "name": "[parameters('storageAccountType')]"
            },
            "properties": {}
        },
        {
            "name": "[parameters('applicationName')]",
            "type": "Microsoft.Web/sites",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "name": "[parameters('applicationName')]"
            }
        },
        {
            "name": "[variables('hostPlanName')]",
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2018-02-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "Tier": "Dynamic",
                "Name": "Y1"
            },
            "tags": {
                "displayName": "[parameters('appServicePlan')]"
            },
            "properties": {
                "name": "[parameters('appServicePlan')]"
            }
        }
    ]
}
